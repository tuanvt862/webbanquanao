
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<section class="content">
    <div class="banner" style="margin-top: 76px">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="~/Images/carousel1.jpg" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/Images/carousel2.jpg" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/Images/carousel3.jpg" alt="Third slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/Images/carousel4.jpg" alt="Third slide">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    @Html.Action("SanPham", "SanPham")
    <section class="categories container__custom py-5">
        <div class="row">
            <div class="col-4">
                <div class="clothesForMen">
                    <div class="position-relative item" style="cursor: pointer">
                        <a href="@Url.Action("SanPhamPartial", "SanPham")">
                            <img src="~/Images/cm1.jpg" class="w-100" />
                            <div class="details detailsForMen position-absolute">
                                <h3>TRANG PHỤC NAM</h3>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-4">
                <div class="clothesForWomen">
                    <div class="position-relative item" style="cursor: pointer">
                        <a href="@Url.Action("SanPhamPartial", "SanPham")">
                            <img src="~/Images/cm3.jpg" class="w-100" />
                            <div class="details detailsForWomen position-absolute">
                                <h3>TRANG PHỤC NỮ</h3>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-4">
                <div class="row">
                    <div class="col-12 mb-4">
                        <div class="PIERRE_CARDING item" style="cursor: pointer">
                            <a href="@Url.Action("SanPhamPartial", "SanPham")">
                                <div class="img__PIERRE_CARDING position-relative">
                                    <div class="details detailsForPIE position-absolute">
                                        <h3>PIERRE CARDING</h3>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="voucher item" style="cursor: pointer">
                            <div class="position-relative img__voucher">
                                <div class="details detailsForPIE position-absolute">
                                    <h3><a href="#">PHIẾU QUÀ TẶNG</a></h3>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="about mb-5 text-white">
        <div class="about__content container__custom">
            <h3 class="py-5 font-weight-bold">Công ty</h3>
            <div class="about__details">
                <h1>CÔNG TY SỐNG THEO CÁCH CỦA BẠN</h1>
                <p class="py-3">Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry’s standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book.</p>
                <button class="btn btn-danger">HIỂU THÊM VỀ CHÚNG TÔI</button>
            </div>
        </div>
    </section>
    <section class="thanhTuu">
        <div class="container">
            <div class="row text-center text-white">
                <div class="col-md-4">
                    <div class="store items">
                        <p class="counter">853</p>
                        <span class="line"></span>
                        <span>Cửa hàng</span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="customer items">
                        <p class="counter">1000</p>
                        <span class="line"></span>
                        <span>Khách hàng doanh nghiệp</span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="productC items">
                        <p class="counter">15</p>
                        <span class="line"></span>
                        <span>Triệu sản phẩm tiêu thụ năm 2016</span>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="related py-4" data-aos="fade-right" data-aos-duration="1000">
        <div class="container__custom">
            <div class="row">
                <div class="col-3">
                    <img src="~/Images/1.png" class="img-fluid" />
                </div>
                <div class="col-3">
                    <img src="~/Images/4.png" class="img-fluid" />
                </div>
                <div class="col-3">
                    <img src="~/Images/5.png" class="img-fluid" />
                </div>
                <div class="col-3">
                    <img src="~/Images/6.png" class="img-fluid" />
                </div>
            </div>
        </div>
    </section>
</section>

