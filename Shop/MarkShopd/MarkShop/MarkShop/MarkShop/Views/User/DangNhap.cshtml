@model MarkShop.Models.Information

@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
<div class="label"></div>
<div class="py-5 container__custom">
    <div class="row" id="renderSearch">
        <div class="d-flex w-100">
            <div class="modalLeft">
                <h2>Đăng nhập</h2>
                <p>
                    Đăng nhập để theo dõi đơn hàng, lưu danh sách sản phẩm yêu thích, nhận nhiều ưu đãi hấp dẫn.
                </p>
                <img src="~/Images/fashionGirl.png" class="img-fluid mt-3" />
            </div>
            <div class="modalRight m-0 d-flex justify-content-center align-items-center" style="margin-left:15px !important;">
                @using (Html.BeginForm("DangNhap", "User", FormMethod.Post))
                {
                    @Html.ValidationSummary(true){

                        <div class="form-group">
                            <label for="tenTaiKhoan">Tài khoản</label>
                            <div class="flex-column d-flex">
                                @Html.TextBoxFor(model => model.UserName, new { autocomplete = "off", @placeholder = "Nhập tài khoản", @id = "tenTaiKhoan", Name = "username" })
                                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                            </div>
                        </div>

                            <div class="form-group">
                                <label for="matKhau">Mật khẩu</label>
                                <div class="flex-column d-flex">
                                    @Html.PasswordFor(model => model.Password, new { autocomplete = "off", @placeholder = "Nhập mật khẩu", @id = "matKhau", Name = "password" })
                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <button class="btn btn-primary mr-3">Đăng nhập</button>
                            <button class="btn btn-success" type="button" data-toggle="modal" data-target="#popupLogin">Đăng ký</button>
                    }
                    <p class="text-danger mt-3">@ViewBag.ThongBao</p>
                }
            </div>
        </div>
    </div>
</div>
@Html.Action("SanPhamTuongTu", "SanPham")

